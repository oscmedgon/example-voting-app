pipeline {
    agent{
        docker{
            image 'node:8.17.0'
            args '-v $HOME/.m2:/root/.m2'
        }
    }
    stages {
        stage('install') {
            when {
                changeset '**/result/**'
            }
            steps {
                dir('result') {
                    echo 'Installing dependencies'
                    sh('npm install')
                    stash name: "node_modules", includes: "**/node_modules/**"
                }
            }
        }
        stage('Test') {
            when {
                changeset '**/result/**'
            }

            steps {
                dir('result') {
                    unstash "node_modules"
                    sh('ls -la')
                    sh('npm run test')
                }
            }
        }
        stage('Build image') {
            when {
                changeset '**/result/**'
            }
            steps {
                dir('result') {
                    unstash "node_modules"
                    def customImage = docker.build("my-image:${env.BUILD_ID}")
                    customImage.tag("my-image:latest")
                }
            }
        }
    }
    post {
        success {
            slackSend (
                message: "Pipeline succeeded - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)",
                color: "#5afc03"
            )
        }
        failure {
            slackSend(
                message: "Pipeline failed - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)",
                color: "#fc0303"
            )
        }
    }
}

